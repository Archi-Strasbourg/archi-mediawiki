{
  "name": "archi-strasbourg/archi-mediawiki",
  "description": "Port of Archi-Wiki to MediaWiki",
  "license": "GPL-3.0",
  "type": "project",
  "replace": {
    "rudloff/mediawiki-composer": "~0.1.3"
  },
  "require": {
    "mediawiki/core": "~1.28.0",
    "mediawiki/Vector": "~1.28.0",
    "mediawiki/semantic-media-wiki": "~2.5.2",
    "mediawiki/page-forms": "4.1.0",
    "mediawiki/semantic-forms-select": "~2.1.0",
    "mediawiki/semantic-maps": "~3.3.0",
    "mediawiki/maps": "~4.3.0",
    "mediawiki/ParserFunctions": "~1.28.0",
    "mediawiki/Cite": "~1.28.0",
    "mediawiki/Comments": "~1.28.0",
    "mediawiki/MultimediaViewer": "~1.28.0",
    "mediawiki/CommonsMetadata": "~1.28.0",
    "mediawiki/VisualEditor": "~1.28.0",
    "mediawiki/TemplateData": "~1.28.0",
    "mediawiki/Arrays": "~1.28.0",
    "mediawiki/UploadWizard": "~1.28.0",
    "mediawiki/ConfirmEdit": "~1.28.0",
    "mediawiki/ContactPage": "~1.28.0",
    "mediawiki/AddThis": "~1.28.0",
    "mediawiki/TextExtracts": "~1.28.0",
    "mediawiki/Newsletter": "~1.28.0",
    "mediawiki/Echo": "~1.28.0",
    "mediawiki/Nuke": "~1.28.0",
    "mediawiki/Loops": "~1.28.0",
    "mediawiki/Variables": "~1.28.0",
    "mediawiki/translate": "~2016.10.0",
    "mediawiki/CleanChanges": "~1.28.0",
    "mediawiki/DynamicPageList": "~1.28.0",
    "mediawiki/NukeDPL": "~1.28.0",
    "mediawiki/GoogleCustomWikiSearch": "~1.28.0",
    "composer/installers": "~1.3.0",
    "archi-strasbourg/archi-news-tab": "dev-develop",
    "archi-strasbourg/category-breadcrumb": "dev-develop",
    "archi-strasbourg/archi-maps": "dev-develop",
    "archi-strasbourg/archi-blog": "dev-develop",
    "archi-strasbourg/archi-comments": "dev-develop",
    "archi-strasbourg/archi-home": "dev-develop",
    "archi-strasbourg/archi-footer": "dev-develop",
    "archi-strasbourg/emailuser-html": "dev-develop",
    "archi-strasbourg/paypal": "dev-develop",
    "archi-strasbourg/archi-mediawiki-redirect": "dev-develop",
    "archi-strasbourg/sections-count": "dev-develop as 0.1.0",
    "archi-strasbourg/language-code": "dev-develop",
    "archi-strasbourg/link-to-archive": "dev-develop",
    "archi-strasbourg/archi-wiki-skin": "dev-develop",
    "archi-strasbourg/email-login": "dev-develop",
    "shakeepers/hide-namespace": "~1.4.3"
  },
  "require-dev": {
    "symfony/var-dumper": "~3.3.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://mwpackagist.netlib.re/"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "ln -sfn ../../ vendor/mediawiki/core/vendor",
      "rm -r vendor/mediawiki/core/skins",
      "ln -sfn ../../../skins/ vendor/mediawiki/core/skins",
      "rm -r vendor/mediawiki/core/extensions",
      "ln -sfn ../../../extensions/ vendor/mediawiki/core/extensions",
      "ln -sfn ../../../composer.lock vendor/mediawiki/core/composer.lock",
      "cd skins/archi-wiki/; npm install; ./node_modules/.bin/bower install; ./node_modules/.bin/gulp"
    ],
    "updatedb": "php vendor/mediawiki/core/maintenance/update.php --conf LocalSettings.php"
  }
}
