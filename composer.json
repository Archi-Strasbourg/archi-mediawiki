{
	"name": "archi-strasbourg/archi-mediawiki",
	"description": "Port of Archi-Wiki to MediaWiki",
	"license": "GPL-3.0",
	"type": "project",
	"replace": {
		"rudloff/mediawiki-composer": "~0.1.3"
	},
	"require": {
		"mediawiki/core": "~1.26.0",
		"mediawiki/vector-skin": "dev-REL1_26",
		"mediawiki/semantic-media-wiki": "~2.3.0",
		"mediawiki/ParserFunctions": "~1.26",
		"mediawiki/Cite": "~1.26",
		"mediawiki/Comments": "~1.26",
		"mediawiki/MultimediaViewer": "~1.26",
		"mediawiki/CommonsMetadata": "~1.26",
		"composer/installers": "~1.0.22",
		"archi-strasbourg/news-tab": "dev-develop",
		"archi-strasbourg/category-breadcrumb": "~2.4.0",
		"archi-strasbourg/archi-maps": "dev-develop"
	},
	"require-dev": {
		"symfony/var-dumper": "~3.0.0"
	},
	"repositories": [{
		"type": "package",
		"package": {
			"name": "mediawiki/ParserFunctions",
			"version": "1.26",
			"source": {
				"url": "https://gerrit.wikimedia.org/r/p/mediawiki/extensions/ParserFunctions.git",
				"type": "git",
				"reference": "REL1_26"
			},
			"type": "mediawiki-extension"
		}
	}, {
		"type": "package",
		"package": {
			"name": "mediawiki/Cite",
			"version": "1.26",
			"source": {
				"url": "https://gerrit.wikimedia.org/r/p/mediawiki/extensions/Cite.git",
				"type": "git",
				"reference": "REL1_26"
			},
			"type": "mediawiki-extension"
		}
	}, {
		"type": "package",
		"package": {
			"name": "mediawiki/Comments",
			"version": "1.26",
			"source": {
				"url": "https://gerrit.wikimedia.org/r/p/mediawiki/extensions/Comments.git",
				"type": "git",
				"reference": "REL1_26"
			},
			"type": "mediawiki-extension"
		}
	}, {
		"type": "package",
		"package": {
			"name": "mediawiki/MultimediaViewer",
			"version": "1.26",
			"source": {
				"url": "https://gerrit.wikimedia.org/r/p/mediawiki/extensions/MultimediaViewer.git",
				"type": "git",
				"reference": "REL1_26"
			},
			"type": "mediawiki-extension"
		}
	}, {
		"type": "package",
		"package": {
			"name": "mediawiki/CommonsMetadata",
			"version": "1.26",
			"source": {
				"url": "https://gerrit.wikimedia.org/r/p/mediawiki/extensions/CommonsMetadata.git",
				"type": "git",
				"reference": "REL1_26"
			},
			"type": "mediawiki-extension"
		}
	}],
	"scripts": {
		"post-install-cmd": [
			"ln -sfn ../../ vendor/mediawiki/core/vendor",
			"rm -r vendor/mediawiki/core/skins",
			"ln -sfn ../../../skins/ vendor/mediawiki/core/skins",
			"rm -r vendor/mediawiki/core/extensions",
			"ln -sfn ../../../extensions/ vendor/mediawiki/core/extensions",
			"ln -sfn ../../../composer.lock vendor/mediawiki/core/composer.lock"
		],
		"updatedb": "php vendor/mediawiki/core/maintenance/update.php --conf LocalSettings.php"
	}
}
