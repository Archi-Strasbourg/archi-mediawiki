{
	"name": "archi-strasbourg/archi-mediawiki",
	"description": "Port of Archi-Wiki to MediaWiki",
	"license": "GPL-3.0",
	"type": "project",
	"replace": {
		"rudloff/mediawiki-composer": "~0.1.3"
	},
	"require": {
		"mediawiki/core": "~1.26.0",
		"mediawiki/Vector": "~1.26.0",
		"mediawiki/semantic-media-wiki": "~2.3.0",
		"mediawiki/ParserFunctions": "~1.26.0",
		"mediawiki/Cite": "~1.26.0",
		"mediawiki/Comments": "~1.26.0",
		"mediawiki/MultimediaViewer": "~1.26.0",
		"mediawiki/CommonsMetadata": "~1.26.0",
		"mediawiki/VisualEditor": "~1.26.0",
		"mediawiki/TemplateData": "~1.26.0",
		"mediawiki/Arrays": "~1.26.0",
		"mediawiki/UploadWizard": "~1.26.0",
		"mediawiki/ConfirmEdit": "~1.26.0",
		"mediawiki/ContactPage": "~1.26.0",
		"mediawiki/AddThis": "~1.26.0",
		"mediawiki/TextExtracts": "~1.26.0",
		"composer/installers": "~1.0.22",
		"archi-strasbourg/news-tab": "dev-develop",
		"archi-strasbourg/category-breadcrumb": "~2.4.0",
		"archi-strasbourg/archi-maps": "dev-develop",
		"archi-strasbourg/archi-blog": "dev-develop",
		"archi-strasbourg/archi-home": "dev-develop"
	},
	"require-dev": {
		"symfony/var-dumper": "~3.0.0"
	},
	"repositories": [{
		"type": "composer",
		"url": "https://mwpackagist.netlib.re/"
	}, {
		"type": "vcs",
		"url": "https://github.com/wikimedia/mediawiki.git"
	}],
	"scripts": {
		"post-install-cmd": [
			"ln -sfn ../../ vendor/mediawiki/core/vendor",
			"rm -r vendor/mediawiki/core/skins",
			"ln -sfn ../../../skins/ vendor/mediawiki/core/skins",
			"rm -r vendor/mediawiki/core/extensions",
			"ln -sfn ../../../extensions/ vendor/mediawiki/core/extensions",
			"ln -sfn ../../../composer.lock vendor/mediawiki/core/composer.lock",
			"cd extensions/VisualEditor && git submodule update --init"
		],
		"updatedb": "php vendor/mediawiki/core/maintenance/update.php --conf LocalSettings.php"
	}
}
